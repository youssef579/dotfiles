# vim:fileencoding=utf-8:foldmethod=marker

# BEGIN_KITTY_THEME
# Everblush
include current-theme.conf
# END_KITTY_THEME
hide_window_decorations yes
mouse_hide_wait 1.0
background_opacity 0.9
window_padding_width 10
cursor none
remember_window_size no
initial_window_width 1000
initial_window_height 800
enable_audio_bell no
tab_bar_edge top
tab_bar_style powerline
tab_title_template "{title[title.rfind(':')+1:]}"
# Active tab (bright, stands out)
active_tab_foreground   #181f21
active_tab_background   #a7c080
active_tab_font_style   bold-italic

# Inactive tabs (muted)
inactive_tab_foreground #dadada
inactive_tab_background #232a2d
inactive_tab_font_style normal

# BEGIN_KITTY_FONTS
font_family      family="JetBrainsMonoNL Nerd Font Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size 19
# END_KITTY_FONTS
